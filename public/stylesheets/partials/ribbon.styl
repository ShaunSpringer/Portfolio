.ribbon
  background-color #a00
  overflow hidden
  box-shadow 0 0 1em #888
  z-index 1002
  position absolute
  width 100%

.ribbon a 
  border-top 1px solid #faa
  border-bottom 1px solid #faa
  color #fff
  display block
  font bold 1.5em 'Helvetiva Neue', Helvetica, Arial, sans-serif
  margin 0.05em 0 0.075em 0
  padding 0.5em 3.5em
  text-align center
  text-decoration none
  text-shadow 0 0 0.5em #444
